{
  "name": "eleventy-with-vite",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "dependencies": {
    "@vitejs/plugin-legacy": "^1.3.1",
    "concurrently": "^6.0.0",
    "vite": "^2.0.5"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.11.1"
  },
  "scripts": {
    "//": "In development, run Eleventy and Vite in parallel",
    "dev": "concurrently npm:dev:*",
    "dev:eleventy": "eleventy --serve",
    "dev:vite": "vite",
    "//": "In production, run Vite and Eleventy in sequence, because we want to read the asset manifest to inject scripts in our templates",
    "build": "npm run build:vite && npm run build:eleventy",
    "build:eleventy": "NODE_ENV=production eleventy",
    "build:vite": "NODE_ENV=production vite build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "ISC"
}
